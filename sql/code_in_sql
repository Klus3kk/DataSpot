create table place (  
  place_id  number primary key ,
  name varchar2(100) ,
  formatted_address varchar2(100) not null,
  business_status varchar2(100),
  price_level number,
  rating real,
  user_rating_total number,
  website varchar2(100),
  phone varchar2(20)
 );


create table photo (  
  photo_id number primary key ,
  place_id number,
  photo_reference varchar2(300) not null,
  photo_url varchar2(300) not null,
  width_px number,
  height_px number,
  attribution_html varchar2(300),
  foreign key (place_id) references place(place_id)
 );
 
 create table review (  
  review_id number primary key,
  place_id number,
  author_name varchar2(50) not null,
  author_url varchar2(200),
  rating REAL,
  relative_time_desc varchar2(50),
  comment_text varchar2(1000),--nie może być comment
  submitted_at TIMESTAMP,
  language varchar2(50),
  foreign key (place_id)  references place(place_id)
 );
 
  create table TypeLabel (
  type_name varchar2(50) primary key,
  description varchar2(100)
 );

 CREATE TABLE PlaceTypeLabel (
  place_id number,
  type_name varchar2(50),
  PRIMARY KEY (place_id, type_name),
  foreign key (place_id) REFERENCES place(place_id),
  foreign key (type_name) REFERENCES TypeLabel(type_name)
);-- na N:N polaczen

 create table Attribute (
  place_id number,
  attribute_name varchar2(100),
  value_boolean number,-- nie dziala boolean
  PRIMARY KEY (place_id, attribute_name),
  foreign key (place_id) references place(place_id)
 );
 create table Viewport (
  viewport_id number primary key,
  place_id number not null,
  ne_lat real not null,
  ne_lng real not null,
  sw_lat real not null,
  sw_lng real not null,
  foreign key (place_id) references place(place_id)
 );

 create table AddressComponent (
  component_id number primary key ,
  place_id number,
  component_name varchar2(100) not null,
  long_name varchar2(100) not null,
  short_name varchar2(30),
  foreign key (place_id) references place(place_id)
 );

 create table OpeningHours (
  hours_id number primary key ,
  place_id number,
  day_of_week varchar2(20) not null,
  open_time varchar2(30),
  close_time varchar2(30),
  is_overnight number,-- nie dziala boolean
  note varchar2(100),
  foreign key (place_id) references place(place_id)
 );

 create table PlusCode (
  global_code varchar2(20) primary key ,
  place_id number,
  compound_code varchar2(100),
  foreign key (place_id) references place(place_id)
 );

 create table GeoLocation (
  geolocation_id number primary key ,
  place_id number,
  latitude real not null,
  longitude real not null,
  foreign key (place_id) references place(place_id)
 );


 
 
